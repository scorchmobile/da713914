<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <br>
            <%= link_to (fa_icon('backward') + ' Back'), videos_path, class: 'btn btn-lg btn-primary' %>
            <br><br>

            <p id="notice"><%= notice %></p>

            <%= simple_form_for(@video) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <div class="row">
                  <div class="col col-sm-12">
                    <%= f.input :hyperlink, placeholder: 'https://www.youtube.com/.....' %>
                  </div>
                </div>

                <div class="row">
                  <div class="col col-sm-6">
                    <%= f.input :position, placeholder: 'homepage-deputy-video' %>
                  </div>
                  <div class="col col-sm-6">
                    <%= f.input :link_text, placeholder: 'Make Money' %>
                  </div>
                </div>
              </div>

              <div class="spacer-2"></div>

            <% end %>

            <%= link_to (fa_icon('pencil') + ' Edit'), edit_video_path(@video), class: 'btn btn-lg btn-primary' %>

            <div class="spacer-3"></div>
            <div class="spacer-3"></div>

            <% content_for :dj do %>
                <script type="text/javascript">
                    $('input, select, textarea').prop('disabled', true);
                </script>
            <% end %>

        </div>
    </div>
</div>
