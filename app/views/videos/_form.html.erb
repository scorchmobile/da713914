<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col col-sm-12">
        <%= f.input :hyperlink, placeholder: 'https://www.youtube.com/.....' %>
      </div>
    </div>

    <div class="row">
      <div class="col col-sm-6">
        <%= f.input :position, placeholder: 'homepage-deputy-video' %>
      </div>
      <div class="col col-sm-6">
        <%= f.input :link_text, placeholder: 'Make Money' %>
      </div>
    </div>
  </div>

  <div class="spacer-2"></div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary btn-block' %>
  </div>

<% end %>

<div class="spacer-3"></div>
