<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p id="notice"><%= notice %></p>

      <h1>Listing Sections</h1>

      <br>
      <%= link_to (fa_icon('plus') + ' Add section'), new_page_section_path(@page), class: 'btn btn-lg btn-primary' %>
      <br><br>

      <table class="table table-striped table-condensed table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Position</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sections.each do |section| %>
            <tr>
              <td><%= section.position %></td>
              <td><%= section.name %></td>
              <td><%= link_to 'Show', page_section_path(@page, section) %></td>
              <td><%= link_to 'Edit', edit_page_section_path(@page, section) %></td>
              <td><%= link_to 'Destroy', page_section_path(@page, section), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
