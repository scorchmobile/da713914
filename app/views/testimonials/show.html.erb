<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <br>
            <%= link_to (fa_icon('backward') + ' Back'), testimonials_path, class: 'btn btn-lg btn-primary' %>
            <br><br>

            <p id="notice"><%= notice %></p>

            <%= simple_form_for(@testimonial) do |f| %>
              <%= f.error_notification %>

                <div class="form-inputs">
                  <div class="row">
                    <div class="col col-sm-3">
                      <%= f.input :position %>
                    </div>
                    <div class="col col-sm-9"></div>
                  </div>

                  <div class="row">
                    <div class="col col-sm-6">
                      <%= f.input :testimonial_type, collection: [['Deputy', 'Deputy'], ['Family', 'Family']], include_blank: false %>
                    </div>
                    <div class="col col-sm-6">
                      <%= f.input :image %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col col-sm-6">
                      <%= f.input :author, placeholder: 'HELP' %>
                    </div>
                    <div class="col col-sm-6">
                      <%= f.input :content, placeholder: 'I am so happy that...' %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col col-sm-6">
                      <%= f.input :css_bottom, placeholder: '200px' %>
                    </div>
                    <div class="col col-sm-6">
                      <%= f.input :css_left, placeholder: '350px ' %>
                    </div>
                  </div>
                </div>

              <div class="spacer-2"></div>

            <% end %>

            <%= link_to (fa_icon('pencil') + ' Edit'), edit_testimonial_path(@testimonial), class: 'btn btn-lg btn-primary' %>

            <div class="spacer-3"></div>
            <div class="spacer-3"></div>

            <% content_for :dj do %>
                <script type="text/javascript">
                    $('input, select, textarea').prop('disabled', true);
                </script>
            <% end %>

        </div>
    </div>
</div>
