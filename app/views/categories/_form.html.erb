<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col col-sm-6">
        <%= f.input :name, placeholder: 'Clothing' %>
      </div>
      <div class="col col-sm-6">
        <%= f.input :permalink, placeholder: 'clothing-and-apparel' %>
      </div>
    </div>

    <div class="row">
      <div class="col col-sm-4">
        <%= f.input :position %>
      </div>
      <div class="col col-sm-4">
        <%= f.input :visible %>
      </div>
      <div class="col col-sm-4">
        <%= f.input :image %>
      </div>
    </div>

    <div class="row">
      <div class="col col-sm-12">
        <%= f.input :description, input_html: { class: 'redactor', style: 'min-height: 500px;' } %>
      </div>
    </div>
  </div>

  <div class="spacer-2"></div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary btn-block' %>
  </div>

<% end %>

<div class="spacer-3"></div>
