<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p id="notice"><%= notice %></p>

      <h1>Listing Categories</h1>

      <br>
      <%= link_to (fa_icon('plus') + ' Add category'), new_category_path, class: 'btn btn-lg btn-primary' %>
      <br><br>

      <table class="table table-striped table-condensed table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Permalink</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.permalink %></td>
              <td><%= link_to 'Show', category %></td>
              <td><%= link_to 'Edit', edit_category_path(category) %></td>
              <td><strong><%= link_to "Manage Products (#{category.products.count})", category_products_path(category) %></strong></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
