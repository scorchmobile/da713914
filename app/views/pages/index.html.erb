<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p id="notice"><%= notice %></p>

      <h1>Listing Pages</h1>

      <br>
      <%= link_to (fa_icon('plus') + ' Add Page'), new_page_path, class: 'btn btn-lg btn-primary' %>
      <br><br>

      <table class="table table-striped table-condensed table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Locate With</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= page.title %></td>
              <td><%= page.permalink %></td>
              <td><%= link_to 'Show', page %></td>
              <td><%= link_to 'Edit', edit_page_path(page) %></td>
              <td><strong><%= link_to "Manage Sections (#{page.sections.count})", page_sections_path(page) %></strong></td>
              <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
