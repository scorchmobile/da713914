<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <br>
            <%= link_to (fa_icon('backward') + ' Back'), pages_path, class: 'btn btn-lg btn-primary' %>
            <br><br>

            <p id="notice"><%= notice %></p>

            <%= simple_form_for(@page) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                  <div class="row">
                    <div class="col col-sm-6">
                        <%= f.input :title, placeholder: 'Homepage' %>
                    </div>
                    <div class="col col-sm-6">
                        <%= f.input :permalink, placeholder: 'welcome-to-the-site' %>
                    </div>
                  </div>

                  <div class="row">
                      <div class="col col-sm-6">
                        <%= f.input :visible %>
                      </div>
                      <div class="col col-sm-6">
                        <%= f.input :private %>
                      </div>
                  </div>
              </div>

              <div class="spacer-2"></div>

            <% end %>

            <%= link_to (fa_icon('pencil') + ' Edit'), edit_page_path(@page), class: 'btn btn-lg btn-primary' %>

            <div class="spacer-3"></div>
            <div class="spacer-3"></div>

            <% content_for :dj do %>
                <script type="text/javascript">
                    $('input, select, textarea').prop('disabled', true);
                </script>
            <% end %>

        </div>
    </div>
</div>
