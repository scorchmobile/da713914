<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p id="notice"><%= notice %></p>

      <h1>Listing Products</h1>

      <br>
      <%= link_to (fa_icon('plus') + ' Add Product'), new_category_product_path(@category), class: 'btn btn-lg btn-primary' %>
      <br><br>

      <table class="table table-striped table-condensed table-hover">
        <thead>
          <tr>
            <th>Category</th>
            <th>Name</th>
            <th>Position</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.category.name %></td>
              <td><%= product.name %></td>
              <td><%= product.position %></td>
              <td><%= link_to 'Show', category_product_path(@category, product) %></td>
              <td><%= link_to 'Edit', edit_category_product_path(@category, product) %></td>
              <td><%= link_to 'Destroy', category_product_path(@category, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

