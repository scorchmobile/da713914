<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <br>
            <%= link_to (fa_icon('backward') + ' Back'), category_products_path(@category), class: 'btn btn-lg btn-primary' %>
            <br><br>

            <p id="notice"><%= notice %></p>

            <%= simple_form_for([:category, @product]) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <div class="row">
                  <div class="col col-sm-4">
                    <%= f.association :category, include_blank: false %>
                  </div>
                  <div class="col col-sm-4">
                    <%= f.input :position, placeholder: '0' %>
                  </div>
                  <div class="col col-sm-4">
                    <%= f.input :visible %>
                  </div>
                </div>

                <div class="row">
                  <div class="col col-sm-6">
                    <%= f.input :name, placeholder: 'Baseball Hat' %>
                  </div>
                  <div class="col col-sm-6">
                    <%= f.input :permalink, placeholder: 'white-baseball-cap' %>
                  </div>
                </div>

                <div class="row">
                  <div class="col col-sm-6">
                    <%= f.input :price, placeholder: '10.00' %>
                  </div>

                  <div class="col col-sm-6">
                    <%= f.input :image %>
                  </div>
                </div>

                <div class="row">
                  <div class="col col-sm-12">
                    <%= f.input :description, input_html: { class: '', style: 'min-height: 500px;' } %>
                  </div>
                </div>
              </div>

              <div class="spacer-2"></div>

            <% end %>

            <%= link_to (fa_icon('pencil') + ' Edit'), edit_category_product_path(@category, @product), class: 'btn btn-lg btn-primary' %>

            <div class="spacer-3"></div>
            <div class="spacer-3"></div>

            <% content_for :dj do %>
                <script type="text/javascript">
                    $('input, select, textarea').prop('disabled', true);
                </script>
            <% end %>

        </div>
    </div>
</div>
