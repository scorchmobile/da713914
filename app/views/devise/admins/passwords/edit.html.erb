<div class="container">
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
	
		<%= f.error_notification %>
		<%= f.input :reset_password_token, as: :hidden %>
		<%= f.full_error :reset_password_token %>
		
		<div class="form-inputs form-signin">
			<h2 class="form-signin-heading">Change your password</h2>
			
		    <%= f.input :email, required: false, autofocus: true, placeholder: 'email@domain.com', label_html: {class: 'sr-only'}, input_html: {class: 'form-control'} %>
		    <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) placeholder: 'Password123', label_html: {class: 'sr-only'}, input_html: {class: 'form-control'} %>
			<%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
			
			<div class="form-actions">
		  	    <%= f.button :submit, "Change my password", class: "btn btn-lg btn-primary btn-block" %>
			</div>
			<%= render "devise/admins/shared/links" %>
	  </div>
	<% end %>
</div>