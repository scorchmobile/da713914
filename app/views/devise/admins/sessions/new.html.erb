<div class="spacer-3"></div>

<div class="container">
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs form-signin">
		<h2 class="form-signin-heading"><%= fa_icon 'sign-in' %> Log in</h2>
	    <%= f.input :email, required: false, autofocus: true, placeholder: 'email@domain.com', label_html: {class: 'sr-only'}, input_html: {class: 'form-control'} %>
	    <%= f.input :password, required: false, placeholder: 'Password123', label_html: {class: 'sr-only'}, input_html: {class: 'form-control'} %>
		<div class="checkbox">
			<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		</div>

	  	  <div class="form-actions">
	  	    <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>
	  	  </div>
		  <%#= render "devise/admins/shared/links" %>
	  </div>
	<% end %>
</div>

<div class="spacer-3"></div>
<div class="spacer-3"></div>
